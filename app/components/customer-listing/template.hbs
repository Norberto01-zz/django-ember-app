<div class="row">
    <div class="col-sm-2">{{customer.name}}</div>
    <div class="col-sm-2">{{customer.phone}}</div>
    <div class="col-sm-2">{{customer.email}}</div>
    <div class="col-sm-1">{{customer.active}}</div>
    <div class="col-sm-3">
        <ul class="list-inline">
            <li>
                <button type="submit" class="btn btn-success"
                  {{action 'showCustomer' customer.phone }}>Show</button>
            </li>
            <li>
                <button type="submit" class="btn btn-warning"
                        data-toggle="modal" data-target="#new-customer"
                {{action 'updateCustomer' customer.phone }}>Update</button>
            </li>
            <li>
                <button type="submit" class="btn btn-danger"
                {{action 'deleteCustomer' customer.phone }}>Delete</button>
            </li>
        </ul>
    </div>
</div>